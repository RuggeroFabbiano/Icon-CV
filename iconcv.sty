\newcommand\makeCV{

	\ifx\@firstL\undefined\def\@firstL{}\fi
	\ifx\@firstR\undefined\def\@firstR{}\fi
	\ifx\@secondL\undefined\def\@secondL{}\fi
	\ifx\@secondR\undefined\def\@secondR{}\fi
