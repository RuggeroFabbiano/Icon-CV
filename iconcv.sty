\def\@printLevel#1{%
	\setcounter{skillLevel}{0}%
	\color{skillColour}
	\loop\ifnum\value{skillLevel}<5\relax
		\ifnum\value{skillLevel}<#1\OK%
		\else\ifnum\value{skillLevel}<6\NOK\fi%
		\fi
		\stepcounter{skillLevel}%
	\repeat
}

